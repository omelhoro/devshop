{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "noUnusedLocals": true,
    "outDir": "out/",
    "paths": {
      "~*": ["./*"]
    },
    "lib": ["es6", "dom"]
  },
  "exclude": ["bin", "node_modules", "**/*.spec.tsx"]
}
