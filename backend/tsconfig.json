{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "noUnusedLocals": true,
    "outDir": "out/",
    "types": ["node"],
    "lib": [
      "es6",
      "es2017.object",
      "es2017.string"
    ]
  },
  "include": [
    "./main.ts"
  ],
  "exclude": [
    "bin",
    "node_modules",
    "**/*.spec.tsx"
  ]
}
